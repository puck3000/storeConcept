#main 
	article
		col(1/4, cycle:4, gutter: 5)
		text-align: center
		margin-bottom: 5%
		
header, #main, aside, footer
	cf()


/*
 **********************
* nav
 **********************
*/
nav

	ul
		margin-bottom: 3rem
		padding: 0
	li 
		display: inline
		col(1/4, gutter: 5)
		text-align: center
		a
			padding: 1rem 0
			margin-bottom: 6%
			col(1/1)
			transition: all 0.4s ease-in-out
			&:hover
				background-color: rgba(0,0,0,0.8)
				color: white
				

// item Imgs and Captions

figure
	margin: 0
	position: relative
	overflow: hidden
	color: white
	img
		display: block
		position: relative
	figcaption
		position: absolute
		top: 0
		left: 0
		text-align: center
		width: 100%
		height: 100%
		opacity: 0
		transition: all 0.4s ease-in-out
		&:hover
			opacity: 1
	.outer 
		display: table
		width: 100%
		height: 100%
	.inner 
		display: table-cell
		vertical-align: middle
		text-align: center
		background-color: rgba(0,0,0,0.8)
		color: white